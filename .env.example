# Root Environment Configuration
# Construction Estimation & Bidding Automation Platform

# Environment (development, staging, production)
NODE_ENV=development
ENVIRONMENT=development

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=construction_platform
POSTGRES_USER=platform_user
POSTGRES_PASSWORD=change_me_in_production

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Service URLs
BACKEND_URL=http://backend:8080
AI_SERVICE_URL=http://ai_service:8000
FRONTEND_URL=http://localhost:3000

# API Keys (replace with actual keys)
API_SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET=REQUIRED-generate-secure-random-secret-here

# Sentry Error Tracking (optional - leave empty to disable)
SENTRY_DSN=

# Logging
LOG_LEVEL=info
